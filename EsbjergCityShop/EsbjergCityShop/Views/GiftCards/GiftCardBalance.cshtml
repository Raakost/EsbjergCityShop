@model Gateway.Models.GiftCard

@{
    ViewBag.Title = "Gavekort Saldo";
}

@using (Html.BeginForm("GiftCardBalance", "GiftCards", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="jumbotron jumbotron_eventdetails">
        <div class="form-horizontal clearfix">
            <h2>Gavekort Saldo</h2>
            <hr style="border-bottom: 1px solid #222222;" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-4 col-md-6">
                    @Html.Label("Indtast Kortnummer:")
                </div>
                <div class="col-md-offset-4 col-md-6">
                    @Html.EditorFor(model => model.CardNumber, new { htmlAttributes = new { @class = "form-control input_field" } })
                    @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "text-danger" })
                </div>                
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-6">
                    <button type="submit" class="btn btn-primary btn-sm">Tjek Saldo</button>
                </div>
            </div>
            <div class="col-md-offset-4 col-md-6">
                @Html.Label("Saldo på kort:")
            </div>
            <div class="col-md-offset-4 col-md-6" style="margin-bottom:100px">
                @Html.DisplayFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control input_field", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
