@model Gateway.Models.GiftCard

@{
    ViewBag.Title = "Køb Gavekort";
}

@using (Html.BeginForm("CreateGiftCard", "GiftCards", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="jumbotron jumbotron_eventdetails">
        <div class="form-horizontal clearfix">
            <h2>Køb Gavekort</h2>
            <hr style="border-bottom: 1px solid #222222;"/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-4 col-md-6">
                    @Html.Label("Indtast Beløb:")
                </div>
                <div class="col-md-offset-4 col-md-6">
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control input_field" } })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-6" style="margin-bottom:100px">
                    <input type="submit" value="Tilføj til kurv" class="btn btn-primary btn-sm"/>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

