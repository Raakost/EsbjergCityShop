<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="/Scripts/snowstorm-min.js"></script>
    <script>
        snowStorm.freezeOnBlur = false;       // Stops the snow effect when the browser window goes out of focus, eg., user is in another tab. Saves CPU, nicer to user.
        snowStorm.flakesMax = 100;            // Sets the maximum number of snowflakes that can exist on the screen at any given time.
        snowStorm.flakesMaxActive = 150;      // Sets the limit of "falling" snowflakes (ie. moving on the screen, thus considered to be active.)
        snowStorm.useTwinkleEffect = true;    // let the snow flicker in and out of view
        snowStorm.snowStick = false;          // Allows the snow to "stick" to the bottom of the window. When off, snow will never sit at the bottom.
        snowStorm.vMaxX = 2;                  // Defines maximum X and Y velocities for the storm; a random value in this range is selected for each snowflake.
        snowStorm.vMaxY = 2;                  // Defines maximum X and Y velocities for the storm; a random value in this range is selected for each snowflake.
    </script>
</head>
<body>
    <div class="background">
        <img src="~/Content/Images/bg/3.jpg" />
    </div>
    @*<-- Navbar -->*@
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container-fluid">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Home/Index"><img src="~/Content/Images/logo.png" class="logo" /></a></li>
                    <li>@Html.ActionLink("Køb Gavekort", "CreateGiftCard", "GiftCards")</li>
                    <li>@Html.ActionLink("Check Gavekort Saldo", "GiftCardBalance", "GiftCards")</li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    @Html.Action("CartIndex", "ShoppingCart")
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @*</-- Navbar -->*@
    <div class="content-wrapper">
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>
    @*<-- Footer -->*@
    <footer>
        <div class="container">
            @*google maps API*@
            <div class="row footer-container">
                <div class="col-md-4 google_map">
                    <h3>Find City-kontoret her!</h3>
                    <iframe width="90%" height="200px" style="border: 0" src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJ3_ftLCshS0YRxxztk04CV_4&key=AIzaSyB8QxMxSvt6fc79RrYtL9QtCtEIOUnWOZo" allowfullscreen></iframe>
                </div>
                @*Åbningstider*@
                <div class="col-md-4">
                    <h3>City-kontorets Åbningstider</h3>
                    <table class="table-openinghours">
                        <tr>
                            <td>Mandag&nbsp;</td>
                            <td>&nbsp;kl. 10.00 til kl. 16.00</td>
                        </tr>
                        <tr>
                            <td>Tirsdag&nbsp;</td>
